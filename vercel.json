{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/api/(.*)$", "dest": "api/index.ts" },
    { "src": "^(?:/review/.*|/onboarding/.*)$", "dest": "/index.html" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}

